# ===== CONFIGURAÇÃO DO SERVIDOR =====
# Porta do servidor (Render define automaticamente em produção)
PORT=3000

# URL base para produção (Swagger e links externos)
# Deixe vazio para usar a origem atual (recomendado)
BASE_URL=

# Ambiente de execução
NODE_ENV=development

# ===== CONFIGURAÇÃO DO ESP32-CAM =====
# IP do ESP32-CAM na rede local
ESP32_CAM_IP=192.168.100.56

# Porta do ESP32-CAM (padrão: 80)
ESP32_CAM_PORT=80

# Modo de captura: 'capture' (rápido) ou 'stream' (delay)
ESP32_USE_STREAMING=false

# Intervalo entre capturas em milissegundos
ESP32_CAPTURE_INTERVAL=1500

# Confiança mínima para detecção (0.0 a 1.0)
ESP32_MIN_CONFIDENCE=0.5

# Máximo de objetos detectados por frame
ESP32_MAX_DETECTIONS=5

# ===== LOGS E DEBUG =====
# Ativar logs detalhados
DEBUG=false

# ===== OBSERVAÇÕES =====
# No Render:
# - PORT é definido automaticamente (NÃO configure manualmente)
# - BASE_URL pode ser https://seu-servico.onrender.com
# - NODE_ENV deve ser 'production'
# - ESP32_CAM_IP deve ser IP público se ESP32 estiver na internet
